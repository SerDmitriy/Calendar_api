{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [ "prettier"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [ "prettier" ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "trailingComma": "es5",
                "semi": false,
                "jsxSingleQuote": true,
                "singleQuote": true,
                "useTabs": true
            }
        ]
    }
}